<form action="/characters/{{character.id}}?_method=PUT" method="POST">
    <div>
        <label for="name">Name</label>
        <input type="text" name="name" id="name" value="{{character.name}}""
    </div>
    
    <div>
        <label for="category">Category</label>
        <input type="text" name="category" id="category" value="{{character.category}}">
    </div>
     <div>
        <label for="description">Description</label>
        <textarea name="description" id="description" cols="30" rows="10">{{character.description}}</textarea>
    </div>
    <div>
        <label for="image">Image Link</label>
        <input type="text" name="imgLink" id="imgLink" value="{{character.imgLink}}">
    </div>
    <input type="submit" value="Submit">
</form>